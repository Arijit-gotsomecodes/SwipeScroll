{
  "manifest_version": 3,
  "name": "Swipe Scroll",
  "version": "1.0",
  "description": "Scroll the website by holding the mouse and swiping.",
  "permissions": ["activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
      "default_popup": "popup.html",
      "default_icon": {
          "16": "image.jpeg",
          "48": "image.jpeg",
          "128": "image.jpeg"
      }
  },
  "icons": {
      "16": "image.jpeg",
      "48": "image.jpeg",
      "128": "image.jpeg"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}